<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/article_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android.support.design:counterMaxLength="3"
        android:background="@drawable/edit_box"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/article_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Nom"
            android:background="@color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/article_quantity"
        android:layout_width="120dp"
        android:layout_below="@+id/article_name"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android.support.design:counterMaxLength="3"
        android:background="@drawable/edit_box"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/article_quantity_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantite"
            android:background="@color/transparent"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/article_quantity"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/edit_box"
        android:layout_below="@+id/article_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/article_quantity">

        <Spinner
            android:id="@+id/dialogSpiner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>




</RelativeLayout>